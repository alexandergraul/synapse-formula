{%- from "synapse/map.jinja" import synapse with context -%}

[Unit]
Description=Synapse Matrix homeserver

[Service]
Type=simple
User={{ synapse.user }}
Group={{ synapse.user }}
WorkingDirectory={{ synapse.data_dir }}
ExecStart={{ synapse.synapse_dir }}/bin/python -m synapse.app.homeserver --config-path={{ synapse.conf_file }}

[Install]
WantedBy=multi-user.target
